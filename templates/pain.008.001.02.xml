<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<?python
  from datetime import datetime
  import time
  import fpformat
?>
<Document xmlns="urn:iso:std:iso:20022:tech:xsd:pain.008.001.02" xmlns:py="http://genshi.edgewall.org/">
    <CstmrDrctDbtInitn>
        <!-- Header -->
        <GrpHdr>
            <MsgId py:content="time.strftime('%Y%m%d%H%M%S')"></MsgId>
            <CreDtTm py:content="time.strftime('%Y-%m-%dT%H:%M:%S')"></CreDtTm>
            <NbOfTxs py:content="len(data['list_voucher'])"></NbOfTxs>
            <CtrlSum py:content="fpformat.fix(data['total_amount'], 2)"></CtrlSum>
            <InitgPty>
                <Nm py:content="data['company_name'][:70]"></Nm>
            </InitgPty>
        </GrpHdr>
        <!-- Payment Group -->
        <PmtInf>
            <PmtInfId py:content="data['list_voucher'][0].number"></PmtInfId>
            <PmtMtd>DD</PmtMtd>
            <BtchBookg>true</BtchBookg> <!-- TODO -->
            <NbOfTxs py:content="len(data['list_voucher'])"></NbOfTxs>
            <CtrlSum py:content="fpformat.fix(data['total_amount'], 2)"></CtrlSum>
            <PmtTpInf>
                <SvcLvl>
                    <Cd>SEPA</Cd>
                </SvcLvl>
                <LclInstrm>
                    <Cd>CORE</Cd> <!-- TODO Either CORE or B2B -->
                </LclInstrm>
                <SeqTp py:content="data['sequence_type']"></SeqTp> <!-- One of FSRT, RCUR, FNAL, OOF -->
            </PmtTpInf>
            <CtgyPurp py:if="False">
                <Cd py:content="data['payment_purpose']"></Cd>
            </CtgyPurp>
            <ReqdColltnDt py:content="datetime.strptime(data['date'], '%Y-%m-%d').date().isoformat()"></ReqdColltnDt>
            <Cdtr>
                <Nm py:content="data['company_name'][:70]"></Nm>
            </Cdtr>
            <CdtrAcct>
                <Id>
                    <IBAN py:content="(data['creditor_bank'].iban or data['creditor_bank'].acc_number).replace(' ', '').upper()"></IBAN>
                </Id>
                <Ccy py:if="False"></Ccy> <!-- Currency -->
            </CdtrAcct>
            <CdtrAgt>
                <FinInstnId>
                    <BIC py:content="data['creditor_bank'].bank_bic.replace(' ', '').upper()"></BIC>
                </FinInstnId>
            </CdtrAgt>
            <UltmtCdr py:if="False">
                <Nm></Nm> <!-- TODO creditor name -->
                <Id>
                    <OrgId></OrgId> <!-- TODO either BIC or BEI -->
                </Id>
            </UltmtCdr>
            <ChrgBr>SLEV</ChrgBr> <!-- TODO optional element, figure out when to specify  -->
            <CdtrSchmeId>
                <Id>
                    <PrvtId>
                        <Othr>
                            <Id py:content="data['creditor_identifier']"></Id> <!-- 2.27 SEPA creditor Id -->
                            <SchmeNm>
                                <Prtry>SEPA</Prtry>
                            </SchmeNm>
                        </Othr>
                    </PrvtId>
                </Id>
            </CdtrSchmeId>
            <!-- Transactions -->
            <DrctDbtTxInf py:if="True" py:for="(i, (voucher, wizard_voucher)) in enumerate(zip(data['list_voucher'], data['list_voucher_wizard']))">
                <?python 
                    mandate = wizard_voucher.mandate_id
                    original_mandate = wizard_voucher.mandate_id.original_mandate_id
                ?>
                <PmtId>
                    <InstrId py:if="False"></InstrId> <!-- 2.30 TODO assigned by instructing party -->
                    <EndToEndId py:content="voucher.number"></EndToEndId> <!-- 2.31 TODO assigned by initiating party -->
                </PmtId>
                <InstdAmt Ccy="${voucher.currency_id.name}" py:content="fpformat.fix(voucher.amount, 2)"></InstdAmt> <!-- 2.44 TODO amount -->
                <DrctDbtTx> <!-- 2.46 mandate stuff -->
                    <MndtRltdInf>
                        <MndtId py:content="mandate.identification"></MndtId> <!-- 2.48 TODO Identifier -->
                        <DtOfSgntr py:content="mandate.date_of_signature"></DtOfSgntr> <!-- 2.49 TODO signature -->
                        <AmdmntInd py:content="repr(mandate.amends_mandate).lower()"></AmdmntInd> <!-- 2.50 TODO true/false -->
                        <AmdmntInfDtls py:if="mandate.amends_mandate">
                            <OrgnMndtId py:content="original_mandate.amends_mandate"></OrgnMndtId>
                            <OrgnCdtrSchmeId py:if="mandate.creditor != original_mandate.creditor">
                                <Nm py:content="original_mandate.creditor.name"></Nm>
                                <Id>
                                    <PrvtId>
                                        <Othr>
                                            <Id py:content="original_mandate.identifier"></Id> <!-- 2.53 TODO SEPA creditor id -->
                                            <SchmeNm>
                                                <Prtry>SEPA</Prtry>
                                            </SchmeNm>
                                        </Othr>
                                    </PrvtId>
                                </Id>
                            </OrgnCdtrSchmeId>
                            <OrgnlDbtrAccnt py:if="mandate.property_account_payable != original_mandate.property_account_payable">
                                 <Id>
                                    <IBAN py:content="original_mandate.property_account_payable"></IBAN>
                                </Id>
                            </OrgnlDbtrAccnt>
                            <OrgnlDbtrAgt py:if="mandate.creditor_agent != original_mandate.creditor_agent">
                                <FinInstnId>
                                    <Othr>
                                        <Id>SMNDA</Id>
                                    </Othr>
                                </FinInstnId>
                            </OrgnlDbtrAgt>
                        </AmdmntInfDtls>
                    </MndtRltdInf>
                </DrctDbtTx>
                <UltmtCdr py:if="False">
                    <Nm py:content="mandate.ultimate_creditor_id.name"></Nm> <!-- 2.69 creditor reference party -->
                    <Id>
                        <!-- 2.69 TODO BIR/BEI??? -->
                        <OrgId>
                            <Othr>
                                <!-- TODO find SIRET code in res.company -->
                                <Id py:content="mandate.ultimate_creditor_id.siret"></Id>
                                <SchmeNm>
                                    <Prtry>SIRET</Prtry>
                                </SchmeNm>
                            </Othr>
                        </OrgId>
                    </Id>
                </UltmtCdr>
                <DbtrAgt>
                    <FinInstnId>
                        <!-- 2.70 TODO debtor's bank -->
                        <BIC py:content="mandate.debtor_agent_id.bic"></BIC>
                    </FinInstnId>
                </DbtrAgt>
                <Dbtr>
                    <!-- 2.72 TODO debtor name -->
                    <Nm py:content="mandate.debtor_id.name"></Nm>
                    <Id py:if="False">
                        <!-- 2.72 TODO BIC/BEI -->
                        <OrgId></OrgId>
                    </Id>
                </Dbtr>
                <DbtrAcct>
                    <Id>
                        <!-- -2.73 debtor account -->
                        <IBAN py:content="mandate.debtor_account_id.iban"></IBAN>
                    </Id>
                </DbtrAcct>
                <UltmtDbtr py:if="False">
                    <!-- 2.74 TODO  -->
                    <Nm py:content="mandate.ultimate_creditor_id.name"></Nm>
                    <Id>
                        <OrgId>
                            <!-- 2.74 BIC/BEI -->
                            <BIC py:content="mandate.ultimate_creditor_id.bic"></BIC>
                        </OrgId>
                    </Id>
                </UltmtDbtr>
                <Purp py:if="False">
                    <!-- 2.77 TODO from list of purpose codes -->
                    <Cd py:content="voucher.purpose_code"></Cd>
                </Purp>
                <!-- Single occurence see section 2.11 -->
                <RgltryRptg py:if="False">
                    <Dtls>
                        <!-- 2.79 TODO -->
                        <Cd></Cd>
                    </Dtls>
                </RgltryRptg>
                <RmtInf>
                    <!-- 2.89 reason for payment -->
                    <Ustrd py:content="'Placeholder'"></Ustrd>
                </RmtInf>
            </DrctDbtTxInf>
        </PmtInf>
    </CstmrDrctDbtInitn>
</Document>
