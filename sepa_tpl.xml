<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<?python
  import time
?>
<Document xmlns="urn:iso:std:iso:20022:tech:xsd:pain.001.001.03" xmlns:py="http://genshi.edgewall.org/">
    <CstmrCdtTrfInitn>
        <GrpHdr>
            <MsgId py:content="time.strftime('%Y%m%d%H%M%S')"></MsgId>
            <CreDtTm py:content="time.strftime('%Y-%m-%dT%H:%M:%S')"></CreDtTm>
            <NbOfTxs py:content="len(list_voucher)"></NbOfTxs>
            <CtrlSum py:content="total_amount"></CtrlSum>
            <InitgPty>
                <Nm py:content="company_name[:70]"></Nm>
            </InitgPty>
        </GrpHdr>
        <PmtInf>
            <PmtInfId py:content="list_voucher[0].number"></PmtInfId>
            <PmtMtd>TRF</PmtMtd>
            <NbOfTxs py:content="len(list_voucher)"></NbOfTxs>
            <CtrlSum py:content="total_amount"></CtrlSum>
            <PmtTpInf>
                <SvcLvl>
                    <Cd>SEPA</Cd>
                </SvcLvl>
            </PmtTpInf>
            <ReqdExctnDt py:content="time.strftime('%Y-%m-%d')"></ReqdExctnDt>
            <Dbtr>
                <Nm py:content="company_name[:70]"></Nm>
            </Dbtr>
            <DbtrAcct>
                <Id>
                    <IBAN py:content="(debtor_bank.iban or debtor_bank.acc_number).replace(' ', '').upper()"></IBAN>
                </Id>
            </DbtrAcct>
            <DbtrAgt>
                <FinInstnId>
                    <BIC py:content="debtor_bank.bank_bic.replace(' ', '').upper()"></BIC>
                </FinInstnId>
            </DbtrAgt>
            <UltmtDbtr>
                <Nm py:content="company_name[:70]"></Nm>
            </UltmtDbtr>
            <ChrgBr>SLEV</ChrgBr>
            <CdtTrfTxInf py:for="voucher in list_voucher">
                <PmtId>
                    <EndToEndId py:content="batch_name"></EndToEndId>
                </PmtId>
                <Amt>
                    <InstdAmt Ccy="${voucher.currency_id.name}" py:content="voucher.amount"></InstdAmt>
                </Amt>
                <CdtrAgt>
                    <FinInstnId>
                        <BIC py:content="voucher.partner_bank_id.bank_bic.replace(' ','').upper()"></BIC>
                    </FinInstnId>
                </CdtrAgt>
                <Cdtr>
                    <Nm py:content="voucher.partner_id.name"></Nm>
                </Cdtr>
                <CdtrAcct>
                    <Id>
                        <IBAN py:content="(voucher.partner_bank_id.iban or voucher.partner_bank_id.acc_number).replace(' ', '').upper()"></IBAN>
                    </Id>
                </CdtrAcct>
                <RmtInf>
                    <Ustrd py:content="voucher.number"></Ustrd>
                    <Strd>
                        <CdtrRefInf>
                            <Tp>
                                <CdOrPrtry>
                                    <Cd>SCOR</Cd>
                                </CdOrPrtry>
                            </Tp>
                        </CdtrRefInf>
                    </Strd>
                </RmtInf>
            </CdtTrfTxInf>
        </PmtInf>
    </CstmrCdtTrfInitn>
</Document>
